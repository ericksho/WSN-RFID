<!DOCTYPE html>
<html>
<head>
  <title>WSN Chile - RFID</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>

<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      
		<a class="navbar-brand" href=<%=root_path %>>WSN Chile - RFID</a>		

      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          <% if alerta_access? %>
            <li><%=link_to "Alertas", alertas_path %></li>
            <li><%=link_to "Horarios", horario_alarmas_path %></li>
          <% end %>
          <li><%=link_to current_user.nombre, current_user %></li>  
          <li><%=link_to "Cerrar sesión", session_path, method: :delete %></li>
          
        </ul>
      </div>
    </div>
</nav>

<div class="container-fluid">
      
      <div class="row row-offcanvas row-offcanvas-left">
        
         <div class="col-sm-3 col-md-2 sidebar-offcanvas" id="sidebar" role="navigation">
           
            <ul class="nav nav-sidebar">
              <% if persona_access? %>
                <li class="<%= 'active' if params[:controller] == 'personas' %>"> <%=link_to "Personas", personas_path %></li>
              <% end%>
              <% if vehiculo_access? %>
                <li class="<%= 'active' if params[:controller] == 'vehiculos' %>"> <%=link_to "Vehículos", vehiculos_path %></li>
              <% end%>
              <% if articulo_access? %>
                <li class="<%= 'active' if params[:controller] == 'articulos' %>"> <%=link_to "Artículos", articulos_path %></li>
              <% end%>
              <% if lector_access? %>
      				  <li class="<%= 'active' if params[:controller] == 'lectors' %>"> <%=link_to "Lectores", lectors_path %></li>
              <% end%>
              <% if lectura_access? %>
      				  <li class="<%= 'active' if params[:controller] == 'lecturas' %>"> <%=link_to "Lecturas", lecturas_path %></li>
              <% end%>
              <% if permiso_access? %>
      				  <li class="<%= 'active' if params[:controller] == 'permisos' %>"> <%=link_to "Permisos", permisos_path %></li>
              <% end%>
              <% if usuario_access? %>
      				  <li class="<%= 'active' if params[:controller] == 'usuarios' %>"> <%=link_to "Usuarios", usuarios_path %></li>
              <% end%>
            </ul>
            <!-- <ul class="nav nav-sidebar">
              <li><a href="">Nav item</a></li>
              <li><a href="">Nav item again</a></li>
              <li><a href="">One more nav</a></li>
              <li><a href="">Another nav item</a></li>
              <li><a href="">More navigation</a></li>
            </ul>
             -->
          
        </div><!--/span-->
        
        <div class="col-sm-9 col-md-10 main">
          
          <!--toggle sidebar button-->
          <p class="visible-xs">
            <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas"><i class="glyphicon glyphicon-chevron-left"></i></button>
          </p>
   
			<%= yield %>
          

      </div><!--/row-->
	</div>
</div><!--/.container-->

<% else %>
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      
    <a class="navbar-brand" href="#">WSN RFID</a>   

      </div>
    </div>
</nav>
<%= yield %>

<% end %>

</body>
</html>
