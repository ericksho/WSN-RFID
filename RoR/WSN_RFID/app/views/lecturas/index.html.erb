<table class="table table-striped">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Id del articulo leido</th>
      <th>id del lector</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lecturas.each do |lectura| %>
      <tr>
        <td><%= lectura.fecha %></td>
        <td><%= lectura.articulo_id %></td>
        <td><%= lectura.lector_id %></td>
        <td><%= link_to 'Ver', lectura %></td>
        <td><%= link_to 'Editar', edit_lectura_path(lectura) %></td>
        <td><%= link_to 'Eliminar', lectura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

