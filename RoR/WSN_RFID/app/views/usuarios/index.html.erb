<table class="table table-striped">
  <p id="notice"><%= notice %></p>
  
  <h1>Usuarios</h1>

  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Email</th>
      <th>Cargo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.nombre %></td>
        <td><%= usuario.apellido %></td>
        <td><%= usuario.email %></td>
        <td><%= usuario.cargo %></td>
        <td><%= link_to 'Ver', usuario, :class => "btn btn-primary btn-xs" %></td>
        <td><%= link_to 'Editar', edit_usuario_path(usuario), :class => "btn btn-warning btn-xs" %></td>
        <td><%= link_to 'Eliminar', usuario, method: :delete, data: { confirm: '¿Está seguro que desea eliminar el usuario?' }, :class => "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Usuario', new_usuario_path, :class => "btn btn-primary" %>
