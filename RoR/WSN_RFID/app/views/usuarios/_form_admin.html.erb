<%= form_for (@usuario), :html => {:class => 'form-horizontal'} do |f| %>

  <% if @usuario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@usuario.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @usuario.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
      
<div class="container">
  <div class="col-md-6 column">
    <form role="form">
      <div class="form-group">
         <%= f.label :nombre %> <%= f.text_field :nombre, :class => "form-control" %>
      </div>
      <div class="form-group">
         <%= f.label :apellido %><%= f.text_field :apellido, :class => "form-control" %>
      </div>
      <div class="form-group">
         <%= f.label :email %> <%= f.text_field :email, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "Contraseña" %> <%= f.password_field :password, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "Confirmar Contraseña" %> <%= f.password_field :password_confirmation, :class => "form-control" %>
      </div>
      <div class="form-select">
        <div class="form-group">
          <%= f.label :cargo %><%= select("permiso_select", "id", Permiso.all.collect {|p| [ p.titulo, p.id ]}) %>
        </div>
      </div>
      <%= f.submit @label, :class => "btn btn-default" %>
  </div>
</div>
<% end %>