<h1>Listado de Artículos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Rfid</th>
      <th>Estado</th>
      <th>Asociado a</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articulos.each do |articulo| %>
      <tr>
        <td><%= articulo.rfid %></td>
        <td><%= articulo.estado %></td>
        <td>
            <% if articulo.persona_id %>
              Persona: <%= link_to(Persona.find_by_id(articulo.persona_id).rut, Persona.find_by_id(articulo.persona_id)) %>
            <% end %>
            <% if articulo.vehiculo_id %>
              Vehiculo: <%= link_to(Vehiculo.find_by_id(articulo.vehiculo_id).patente, Vehiculo.find_by_id(articulo.vehiculo_id)) %>
            <% end %>
        </td>
        <td><%= link_to 'Ver', articulo %></td>
        <td><%= link_to 'Editar', edit_articulo_path(articulo) %></td>
        <td><%= link_to 'Eliminar', articulo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

