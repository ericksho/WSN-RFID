<%= form_for(@articulo) do |f| %>
  <% if @articulo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@articulo.errors.count, "error") %> prohibited this articulo from being saved:</h2>

      <ul>
      <% @articulo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :rfid %><br>
    <%= f.number_field :rfid %>
  </div>

  <div class="field">
    <%= f.label :persona %><br>
    <%= collection_select(:articulo, :persona_id, Persona.all, :id, :rut, :prompt => 'Seleccione por rut', :selected => @persona_selected)%>
  </div>

  <div class="field">
    <%= f.label :vehiculo %><br>
    <%= collection_select(:articulo, :vehiculo_id, Vehiculo.all, :id, :patente, :prompt => 'Seleccione por patente', :selected => @vehiculo_selected)%>
  </div>

  <div class="field"> 
    <% f.label :estado %><br>
    <%=  f.hidden_field :estado, :value => true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
