<table class="table table-striped">
  <thead>
    <tr>
		  <th>Nombre</th>
      <th>Posición</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lectors.each do |lector| %>
      <tr>
		<td><%= lector.nombre %></td>
        <td><%= lector.posicion %></td>
        <td><%= link_to 'Ver', lector %></td>
        <td><%= link_to 'Editar', edit_lector_path(lector) %></td>
        <td><%= link_to 'Destroy', lector, method: :delete, data: { confirm: '¿Está seguro que desea eliminar el lector?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Lector', new_lector_path %>
