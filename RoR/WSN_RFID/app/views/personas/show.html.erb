<p id="notice"><%= notice %></p>

<h1><%= @persona.nombre %> <%= @persona.apellido %></h1>

<p>
  <strong>Nombre:</strong>
  <%= @persona.nombre %>
</p>

<p>
  <strong>Apellido:</strong>
  <%= @persona.apellido %>
</p>

<p>
  <strong>Rut:</strong>
  <%= @persona.rut %>
</p>

<p>
  <strong>Email:</strong>
  <%= @persona.email %>
</p>

<p>
  <strong>Celular:</strong>
  <%= @persona.celular %>
</p>

<p>
  <strong>Fecha nacimiento:</strong>
  <%= @persona.fecha_nacimiento.strftime("%d/%m/%Y") %>
</p>

<p>
  <strong>Cargo:</strong>
  <%= @persona.cargo %>
</p>

<%= link_to 'Editar', edit_persona_path(@persona), :class => "btn btn-warning" %>
<%= link_to 'Volver', personas_path, :class => "btn btn-default" %>
