<table class="table table-striped">
  <p id="notice"><%= notice %></p>

  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Rut</th>
      <th>Email</th>
      <th>Celular</th>
      <th>Fecha nacimiento</th>
      <th>Cargo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personas.each do |persona| %>
      <tr>
        <td><%= persona.nombre %></td>
        <td><%= persona.apellido %></td>
        <td><%= persona.rut %></td>
        <td><%= persona.email %></td>
        <td><%= persona.celular %></td>
        <td><%= persona.fecha_nacimiento.strftime("%d/%m/%Y")%></td>
        <td><%= persona.cargo %></td>
        <!--
        <td><%= link_to 'Ver', persona, :class => "btn btn-primary btn-sm" %></td>
        -->
        <td><%= link_to 'Editar', edit_persona_path(persona), :class => "btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Eliminar', persona, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear Persona', new_persona_path, :class => "btn btn-primary" %>
